acl internals {
  127.0.0.1;
};

view internal {
    match-clients { internals; };
    recursion yes;
    allow-recursion { internals; };
    zone "w15.ephec-ti.be" {
        type master;
        file "/etc/bind/db.int.w15.ephec-ti.be";
    };
};

view external {
    match-clients { any; };
    zone "w15.ephec-ti.be" {
        type master;
        file "/etc/bind/db.w15.ephec-ti.be";
    };
};
